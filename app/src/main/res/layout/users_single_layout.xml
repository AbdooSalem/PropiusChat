<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_single_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/user2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/user_single_username"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friends_single_image"
        android:layout_toEndOf="@+id/user_single_online"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_single_status"
        android:text="Connected ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_single_username"
        android:layout_alignLeft="@id/user_single_username"
        android:textSize="14sp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@mipmap/ic_online"
        android:layout_alignTop="@+id/friends_single_image"
        android:layout_toEndOf="@+id/friends_single_image"
        android:id="@+id/user_single_online"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:visibility="invisible" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/friends_single_image"
        android:background="#bdbdbd" />


</RelativeLayout>